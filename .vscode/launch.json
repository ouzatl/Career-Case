{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Career Consumer",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Career.Consumer/bin/Debug/net6.0/Career.Consumer.dll",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Career API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Career.API/bin/Debug/net6.0/Career.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Career.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Docker .NET Core Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "netCore": {
                "appProject": "${workspaceFolder}/Career.API/Career.API.csproj"
            }
        }
    ],
    "compounds": [
        {
            "name": "Career API - Consumer",
            "configurations": [
                "Career API","Career Consumer"
            ]
        }
    ]
}